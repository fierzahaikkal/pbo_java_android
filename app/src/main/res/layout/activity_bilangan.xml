<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="28dp"
    android:background="@drawable/bg_bilangan"
    tools:context=".BilanganActivity">

    <TextView
        style="@style/TextAppearance.Material3.HeadlineLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Membaca Bilangan"
        android:layout_marginBottom="48dp"
        android:textColor="@color/putihPalette"
        />

    <TextView
        android:id="@+id/bilangan"
        style="@style/TextAppearance.Material3.HeadlineLarge"
        android:textColor="@color/putihPalette"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bilangan"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="98dp"
        app:cardCornerRadius="25dp"
        android:layout_marginBottom="-25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="64dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusBottomEnd="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/angka"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Bilangan"
                    android:textSize="18dp"
                    android:padding="24dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/proses"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proses"
                android:paddingHorizontal="48dp"
                android:paddingVertical="15dp"
                android:textSize="18dp"/>
        </LinearLayout>




    </androidx.cardview.widget.CardView>




</LinearLayout>