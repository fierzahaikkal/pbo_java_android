<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bilangan">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Row:"
        android:textColor="@color/putihPalette"
        android:textStyle="bold"
        android:textSize="10pt"
        android:layout_marginTop="10pt"
        android:layout_marginLeft="11pt"/>
    
    <RelativeLayout
        android:layout_width="160pt"
        android:layout_height="270pt"
        android:layout_marginTop="5pt"
        android:background="@drawable/custom_shape"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/id"
            android:textSize="7pt"
            android:fontFamily="@font/inter"
            android:textColor="@color/biruMudaPalette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7pt"
            android:layout_marginLeft="10pt"
            android:layout_marginRight="10pt"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/name"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="@font/inter"
            android:textColor="@color/biruGelapPalette"
            android:layout_below="@id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1pt"
            android:layout_marginLeft="10pt"
            android:layout_marginRight="10pt" />

        <TextView
            android:id="@+id/address"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</LinearLayout>