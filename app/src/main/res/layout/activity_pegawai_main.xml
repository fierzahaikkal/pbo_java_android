<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/bg_login"
    tools:context=".PegawaiMainActivity">

    <RelativeLayout
        android:id="@+id/pegawaiMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/radius"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:paddingTop="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/biruMudaPalette"
            android:fontFamily="@font/inter"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Nama Pegawai"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/biruTerangPalette"
            android:id="@+id/editTextName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/biruMudaPalette"
            android:fontFamily="@font/inter"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Posisi" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/biruTerangPalette"
            android:inputType="text"
            android:id="@+id/editTextDesg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/biruMudaPalette"
            android:fontFamily="@font/inter"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Gaji" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/biruTerangPalette"
            android:inputType="number"
            android:id="@+id/editTextSalary" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah"
            android:textStyle="bold"
            android:textColor="@color/putih"
            android:background="@drawable/buttoncolor"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="95dp"
            android:fontFamily="@font/inter"
            android:id="@+id/buttonAdd" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar Pegawai"
            android:textStyle="bold"
            android:textColor="@color/putihPalette"
            android:background="@drawable/buttoncolor"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="95dp"
            android:fontFamily="@font/inter"
            android:id="@+id/buttonView" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

