<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/bg3"
    tools:context=".PegawaiMainActivity">



    <LinearLayout
        android:id="@+id/pegawaiMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/radius"
        android:layout_margin="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp"
        android:elevation="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material3.HeadlineLarge"
            android:text="Register Pegawai"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilnamapeg"
            android:layout_marginTop="10dp"
            android:hint="Nama Pegawai"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:startIconDrawable="@drawable/nama"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#0000">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextName"
                android:textSize="15dp"
                android:background="@null"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilposisi"
            android:layout_marginTop="20dp"
            android:hint="Posisi"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:startIconDrawable="@drawable/posisi"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#0000">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextDesg"
                android:textSize="15dp"
                android:background="@null"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilsalary"
            android:layout_marginTop="20dp"
            android:hint="Salary"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:startIconDrawable="@drawable/rupiah"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#0000">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextSalary"
                android:textSize="15dp"
                android:background="@null"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah"
            android:textStyle="bold"
            android:background="@drawable/buttoncolor"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="95dp"
            android:fontFamily="@font/inter"
            android:id="@+id/buttonAdd" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar Pegawai"
            android:textStyle="bold"
            android:background="@drawable/buttoncolor"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="95dp"
            android:fontFamily="@font/inter"
            android:id="@+id/buttonView"/>
    </LinearLayout>
</LinearLayout>

