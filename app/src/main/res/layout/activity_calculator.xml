<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_login"
    tools:context=".CalculatorActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/radius"
        android:elevation="7dp">

        <LinearLayout
            android:id="@+id/inputNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:gravity="center"
                android:text="Kalkulator Dua Operand"
                android:textColor="@color/biruMudaPalette"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/angka_pertama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/biruTerangPalette"
                android:ems="10"
                android:hint="Masukkan angka pertama"
                android:inputType="number"
                android:padding="15dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/angka_kedua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/biruTerangPalette"
                android:ems="10"
                android:hint="Masukkan angka kedua"
                android:inputType="number"
                android:padding="15dp"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/upperOperand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tambah"
                android:layout_width="100dp"
                android:layout_height="58dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/calculator_radiusbutton"
                android:fontFamily="@font/inter"
                android:text="+"
                android:textColor="@color/biruTerangPalette"
                android:textSize="25sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/kurang"
                android:layout_width="100dp"
                android:layout_height="58dp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/calculator_radiusbutton"
                android:fontFamily="@font/inter"
                android:text="-"
                android:textColor="@color/biruTerangPalette"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/inputNumber"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/kali"
                android:layout_width="100dp"
                android:layout_height="58dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/calculator_radiusbutton"
                android:fontFamily="@font/inter"
                android:text="x"
                android:textAllCaps="false"
                android:textColor="@color/biruTerangPalette"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bagi"
                android:layout_width="100dp"
                android:layout_height="58dp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/calculator_radiusbutton"
                android:fontFamily="@font/inter"
                android:text=":"
                android:textColor="@color/biruTerangPalette"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bersihkan"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/calculator_radiusbutton"
                android:fontFamily="@font/inter"
                android:text="Bersihkan"
                android:textColor="@color/biruTerangPalette"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:elevation="7dp"
        android:background="@drawable/radius">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Hasil"
            android:textSize="20sp"
            android:textColor="@color/biruMudaPalette"
            android:fontFamily="@font/inter"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/hasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/biruMudaPalette"
            android:fontFamily="@font/inter"/>

    </LinearLayout>
</LinearLayout>